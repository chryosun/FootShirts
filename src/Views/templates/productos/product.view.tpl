<section style="display: flex;
  justify-content: center;
  gap: 50px;">
  <div class="image">
    <img src="https://naidevs.com/images/{{idProducto}}.webp" alt="{{idProducto}}" class="product-image" style="width: 300px;">
  </div>
  <div class="info" style="padding: 20px;">
    <h2>{{nombreProducto}}</h2>
    <p>L. {{precioProducto}}.00</p>
    <p>Categoria: {{nombreLiga}}</p>
    <button style="border: none;
  padding: 10px 15px;
  border-radius: 10px;
  font-size: 16px;
  background-color: rgb(6, 3, 84);
  color: #fff;
  cursor: pointer;">Agregar al Carrito</button>
  </div>
</section>